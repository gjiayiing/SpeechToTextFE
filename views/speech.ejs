<body>
  <div class="container" style="text-align:center">
    <div> Speech to text</div>
    <!-- <button type="button" class="btn btn-primary" onmousedown="press()">Record</button> -->
    <button type="button" class="btn btn-primary" onclick="playAudio()">Play</button>
  </div>
  <div class="container" style="text-align:center">
    
  </div>
  <div class="container" style="text-align:center">
    <div> Text to Speech</div>
    <div id="textRecord"> Status</div>
    <button onclick="speak('speaking')">speaK</button>
    <button type="button" class="btn btn-primary" onmousedown="recordAudio()"
      onmouseup="stopRecordAudio()">Record</button>
    <!-- <audio id="audioPlayer" controls></audio> -->
  </div>
  <!-- <div class="dropdown">
